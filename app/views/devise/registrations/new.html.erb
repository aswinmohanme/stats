<% district_options = District.all.map { |a| [a.title, a.id] }
   gender_options = %w(Male Female Other)
%>

<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", volunteers: resource %>

  <div class="field">
    <%= f.label :email %><br/>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br/>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br/>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div>
    <%= f.select :district_id, district_options, {}, prompt: 'Select your district' %>
  </div>

  <div>
    <%= f.number_field :age %>
  </div>

  <div>
    <%= f.number_field :mobile_number %>
  </div>

  <div>
    <%= f.select :sex, gender_options, {}, prompt: 'Select your Gender' %>
  </div>

  <div class="field">
    <%= f.label :username %><br/>
    <%= f.email_field :userName, autofocus: true%>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
